.signup
  %form{:action => "/signup", :method => "post", :class => "form-signin", :style => "max-width: 330px;margin: 0 auto;"}
    %label.sr-only{:for => "inputEmail"} Email address
    %input#inputEmail.form-control{:autofocus => "", :placeholder => "Email address", :required => "", :name => "email", :type => "email"}/
    %label.sr-only{:for => "inputPassword"} Password
    %input#inputPassword.form-control{:placeholder => "Password", :required => "", :name => "password", :type => "password"}/
    %input#inputPassword.form-control{:placeholder => "Password Confirmation", :required => "", :name => "password_confirmation", :type => "password"}/
    %br
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign up
    %h5
      already have an account?
      %a{ href: url("#{request.base_url}/login") } login